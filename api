    // Request Quote
    function requestQuote(packageName) {
      const message = ูุฑุญุจุงูุ ุฃุฑูุฏ ุญุฌุฒ ุงุฌุชูุงุน ูุน ุงููุฑูู ูููุงูุดุฉ ุจุงูุฉ ${packageName};
      const whatsappUrl = https://wa.me/96898567383?text=${encodeURIComponent(message)};
      window.open(whatsappUrl, '_blank');
    }

    // Book Meeting
    function bookMeeting() {
      const message = ูุฑุญุจุงูุ ุฃุฑูุฏ ุญุฌุฒ ุงุฌุชูุงุน ูุน ุงููุฑูู ูููุงูุดุฉ ุญููู Moment+ ูุดุฑูุชู;
