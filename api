    // FAQ Toggle
    function toggleFaq(element) {
      const answer = element.nextElementSibling;
      const isActive = answer.classList.contains('active');
      
      // Close all FAQ answers
      document.querySelectorAll('.faq-answer').forEach(ans => {
        ans.classList.remove('active');
      });
      
      // Open clicked FAQ if it wasn't active
      if (!isActive) {
        answer.classList.add('active');
      }
    }

    // Calculator
    function calculatePrice() {
      const macInput = document.getElementById('mac-input');
      const resultDiv = document.getElementById('calculator-result');
      const packageDiv = document.getElementById('recommended-package');
      
      const macCount = parseInt(macInput.value) || 1000;
      
      let recommendedPackage = '';
      let price = '';
      
      let broadcastInfo = '';
      
      if (macCount <= 1000) {
        recommendedPackage = 'M+ Core | ูุจุถุฉ';
        price = '648 ุฑ.ุน';
        broadcastInfo = 'ุฑุณุงุฆู ุฌูุงุนูุฉ ุจุณูุทุฉ: ูุฑูุชูู ุจุงูุดูุฑุ ูุฌููุนุฉ ุนููุงุก ูุงุญุฏุฉ';
